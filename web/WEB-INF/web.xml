<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">


    <servlet>
        <servlet-name>in</servlet-name>
        <servlet-class>servlets.input.In</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>in</servlet-name>
        <url-pattern>/in</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>create</servlet-name>
        <servlet-class>servlets.create.Create</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>create</servlet-name>
        <url-pattern>/create</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>refresh_index</servlet-name>
        <servlet-class>servlets.refresh.index.RefreshIndex</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>refresh_index</servlet-name>
        <url-pattern>/refresh_index</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>refresh_main</servlet-name>
        <servlet-class>servlets.refresh.main.RefreshMain</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>refresh_main</servlet-name>
        <url-pattern>/refresh_main</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>check</servlet-name>
        <servlet-class>servlets.check.Check</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>check</servlet-name>
        <url-pattern>/check</url-pattern>
    </servlet-mapping>

</web-app>